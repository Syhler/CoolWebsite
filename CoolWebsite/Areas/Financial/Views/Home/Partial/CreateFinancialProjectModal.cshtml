@model CoolWebsite.Areas.Financial.Models.CreateFinancialProjectModel


<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Create new Financial Project</h5>
            <button type="button" class="close red" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <form role="form" id="create-financial-project-modal-form">
            <div class="modal-body">
                <div class="form-group">
                    <label asp-for="Name">Project Name</label>
                    <input class="form-control" name="financial_project_name" 
                           id="financial_project_name" asp-for="Name" placeholder="Enter Project Name">
                    <small id="emailHelp" class="form-text text-muted">Wooow small help much help lmao.</small>
                </div>


                @await Html.PartialAsync("AddUserPartialView", @Model.AddUserModel)

            </div>
            
            <div class="modal-footer">
                <button type="submit" id="create-financial-project" class="btn btn-primary">Save changes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </form>
    </div>
</div>